    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.meditation.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_relax"
        android:name="com.example.meditation.ui.dashboard.DashboardFragment"
        android:label="@string/title_relax"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_meditation"
        android:name="com.example.meditation.ui.notifications.NotificationsFragment"
        android:label="@string/title_meditation"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_focus"
